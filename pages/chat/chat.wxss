  width: 54rpx;
  height: 26rpx;
  background: #7faf41;
  text-align: center;
  line-height: 26rpx;
  font-size: 18rpx;
  color: #fff;
  margin-left: 20rpx;
  margin-top: 16rpx;
  border-radius: 4rpx;
}

.right {
  font-size: 28rpx;
  color: #7faf41;
  margin-top: 5rpx;
}

.content {
  width: 616rpx;
  height: auto;
  border-radius: 5rpx;
  background: #fff;
  margin-left: 65rpx;
  margin-top: 13rpx;
  position: relative;
}

.content::before {
  content: '';
  position: absolute;
  top: -18rpx;
  left: 32rpx;
  width: 0;
  height: 0;
  border-bottom: 20rpx solid #fff;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
}

.title {
  font-size: 28rpx;
  color: #333;
  margin: 28rpx 20rpx 0;
  font-weight: 900;
}

.conImg {
  width: 586rpx;
  height: 390rpx;
  margin: 22rpx 20rpx 33rpx 20rpx;position: relative;
}

.eye {
  width: 35rpx;
  height: 22rpx;
  position: absolute;
  top: 40rpx;
  right: 82rpx;
}

.conImg text {
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 32rpx;
  right: 20rpx;
}
.bottom{
  display: inline-block;width: 90%;
}
.operat{
  width: 32rpx;
  height: 32rpx;
