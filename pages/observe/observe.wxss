page {
  margin: 0;
  padding: 0;
  background: #ececec;
  box-sizing: border-box;
}

.main {
  /* width: 90%; */
  margin: 15rpx 20rpx 0;
  display: inline-block;
}

.time-axis {
  margin: 0;
  padding: 0;
  position: relative;
}

.time-axis:before {
  content: '';
  position: absolute;
  left: 56rpx;
  top: 30rpx; 
  width: 1px;
  height: 100%;
  background-color: #e4e4e4;
}

.time-axis-item {
  position: relative;
  font-size: 20rpx; 
}

.time-axis-date {
  color: #666;
}
.time-axis-date text{
  width:40rpx;text-align: center;display: block;
}
.time-axis-date text:first-child{
  font-size: 34rpx;
  color: #141414;
}
.time-axis-date span {
  position: absolute;
  margin-left: 46rpx;
  top: 30rpx;
  display: block;
  width: 22rpx;
  height: 22rpx;
  border-radius: 100%;
  background-color: #33d1bf;
  z-index: 1;
}
.title {
  margin-left: 60rpx;
  margin-top: 40rpx; 
}

.time-axis-title {
  background: #fff;
  position: relative;
  border: 1px solid #fff;
  border-radius: 4rpx;
  margin-top: 30rpx;
  padding: 25rpx 10rpx;
  box-sizing: border-box;
}

.title1 {
   margin-top: 0; 
}

.time-axis-title .yuan {
  position: absolute;
  left: -48rpx;
  top: -4rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #ccc;
  border-radius: 100%;
  z-index: 0;
}
.contitle{
  display: inline-block;
}
.contitle image{
  width:24rpx;
  height: 32rpx;
}
.contitle view{
  font-size: 30rpx;
  color: #333333;
  padding-left: 10rpx;
}
.dian {
  display: none;
}

.time-axis-title::before {
  content: "";
  position: absolute;
  right: 100%;
  top: 0rpx;
  width: 0;
  height: 0;
  border-top: 24rpx solid #fff;
  border-left: 24rpx solid transparent;
}

.conImg {
  width: 580rpx;
  height: 390rpx;
}




.bottom{
  display: block;
  padding-top: 30rpx;
}

.bottom text{
  font-size: 21rpx;
  color: #999;
  
}
.date{
  font-size: 20rpx;
  color: #999;
  float: right;
}