/* pages/watch/watch.wxss */

page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  background: #ececec;
}

.main {
  width: 100%;
  border-top: 1px solid #ccc;
}
.main-bg{
  height: 100%;
  background:#fff;
  margin: 20rpx 0 0;
}
.main-bg:first-child{
  margin: 0;
}
.head{
  display: flex;
  margin: 0 30rpx;
  padding: 30rpx 0 20rpx;
}
.headImg {
  width: 70rpx;
  height: 70rpx;
  
}

.headTxt {
  font-size: 28rpx;
  color: #333;
  padding-left: 20rpx;
  padding-top: 10rpx; 

}

.jibie {
  width: 76rpx;
  height: 28rpx;
  padding-left: 20rpx;
  padding-top: 20rpx; 
}

.right {
  font-size: 28rpx;
  color: #7faf41;
  padding-left: 300rpx;
  padding-top: 14rpx; 
}



.conImg {
  width: 100%;
  height: 600rpx;
}
 .title {
  font-size: 28rpx;
  color: #333;
  margin: 30rpx;
  line-height: 1.7em;
  font-weight: 900;
} 

.bottom{
  font-size: 24rpx;
  color: #7f7f7f;
  margin: 0 30rpx;
  padding-bottom: 48rpx;
  background: #fff;
}
.price text:first-child{
  color: #fe5c42;
}
.price text:nth-child(2){
   color: #fe5c42;
   font-size: 30rpx;
   font-weight: bold;
}
.date{
  float: right;
}